      "path" : "./",
      "post-deploy" : "npm install && bower install && pm2 startOrRestart ecosystem.json --env production"
    },
    "dev" : {
      "user" : "node",
      "host" : "212.83.163.1",
      "ref"  : "origin/master",
      "repo" : "git@github.com:jurStv/baza.git",
      "path" : "/var/www/development",
      "post-deploy" : "npm install && bower install && pm2 startOrRestart ecosystem.json --env dev",
