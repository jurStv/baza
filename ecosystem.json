      "name"      : "BAZA",
      "script"    : "index.js",
      "env": {
        "COMMON_VARIABLE": "true"
      },
      "env_production" : {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy" : {
    "production" : {
      "user" : "node",
      "host" : "212.83.163.1",
